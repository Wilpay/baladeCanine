{% extends('base.html.twig') %}
{% block title %}{{ parent() }} | Modifier Animal{% endblock %}
{% block body %}


    <div class="card">
        <div class="card-header">
            <h1>Modifier animal</h1>
        </div>
        <div class="card-body">
            <p class="card-text">
                {{ form_start(form) }}
                {{ form_errors(form) }}
            <div class="row mb-2">
                <div class="font-weight-bold col-12 col-md-4 m-auto">Cat√©gorie:</div>
                <div class="col-12 col-md-8">
                    {{ form_widget(form.Categorie) }}
                    {{ form_errors(form.Categorie) }}
                </div>
            </div>
            <div class="row mb-2">
                <div class="font-weight-bold col-12 col-md-4 m-auto">Nom:</div>
                <div class="col-12 col-md-8">
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
            </div>
            <div class="row mb-2">
                <div class="font-weight-bold col-12 col-md-4 m-auto">Date de naissance:</div>
                <div class="col-12 col-md-8">
                    {{ form_widget(form.dateNaissance) }}
                    {{ form_errors(form.dateNaissance) }}
                </div>
            </div>
            <div class="row mb-2">
                <div class="font-weight-bold col-12 col-md-4 m-auto">Poids:</div>
                <div class="col-12 col-md-8">
                    {{ form_widget(form.poids) }}
                    {{ form_errors(form.poids) }}
                </div>
            </div>


            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-block btn-success font-weight-bold mt-5'}}, {'label': 'Inscrire'}) }}
            {{ form_end(form) }}
            </p>
        </div>
    </div>


{% endblock %}