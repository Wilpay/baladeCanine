{% extends('base.html.twig') %}
{% block title %}{{ parent() }} | Profil{% endblock %}
{% block body %}


    {% if util.animals.count == 0 %}
        <div class="card text-center">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('profilUtil',  {id:util.id}) }}">Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="{{ path('profilUtilAnim',  {id:util.id}) }}">Animaux</a>
                    </li>
                </ul>
            </div>
            <div class="card-body">
                <h5 class="card-title">Pas d'animaux</h5>
            </div>
        </div>
        {% else %}
            {% for animal in util.animals %}

                <div class="card text-center">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('profilUtil',  {id:util.id}) }}">Profil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="{{ path('profilUtilAnim',  {id:util.id}) }}">Animaux</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">

                        <div class="card" style="">
                            {% if animal.image != null %}
                                <img src="{{ asset('images/' ~ animal.image)  }}" height="200" width="200" class="rounded mx-auto d-block mt-2">
                            {% else %}
                                <img src="{{ asset('images/animal.jpg')  }}"height="200" width="200" class="rounded mx-auto d-block mt-2">
                            {% endif %}
                            <div class="card-body">
                                <h5 class="card-title">{{ animal.nom }}</h5>
                            </div>

                        </div>
                    </div>
                </div>

            {% endfor %}
    {% endif %}






{% endblock %}